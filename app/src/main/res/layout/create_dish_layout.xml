<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/main"
    tools:context=".Dish.CreateDish"
    android:background="#D5D6D6">

    <ImageButton
        android:id="@+id/ibImage"
        android:layout_width="201dp"
        android:layout_height="182dp"
        android:src="@drawable/image_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtDishName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Dish name"
        app:layout_constraintTop_toBottomOf="@+id/ibImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtDishDesc"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Quite desc"
        app:layout_constraintTop_toBottomOf="@+id/txtDishName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/imageButtonCrustacean"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="52dp"
        android:src="@drawable/crustacean_icon"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonSesame"
        app:layout_constraintHorizontal_bias="0.295"
        app:layout_constraintStart_toStartOf="@+id/imageButtonGluten"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc" />

    <ImageView
        android:id="@+id/imageButtonGluten"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="52dp"
        android:src="@drawable/gluten_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc" />

    <ImageView
        android:id="@+id/imageButtonEgg"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="52dp"
        android:src="@drawable/egg_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.754"/>

    <ImageView
        android:id="@+id/imageButtonSesame"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="52dp"
        android:src="@drawable/sesame_icon"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc"
        app:layout_constraintStart_toStartOf="@+id/imageButtonCrustacean"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageButtonNut"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="152dp"
        android:src="@drawable/nuts_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />

    <ImageView
        android:id="@+id/imageButtonDairy"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="152dp"
        android:src="@drawable/dairy_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.899" />

    <ImageView
        android:id="@+id/imageButtonFish"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="152dp"
        android:src="@drawable/fish_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <ImageView
        android:id="@+id/imageButtonSoy"
        android:layout_width="170px"
        android:layout_height="170px"
        android:layout_marginTop="152dp"
        android:src="@drawable/soy_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />

</androidx.constraintlayout.widget.ConstraintLayout>