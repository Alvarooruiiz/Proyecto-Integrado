<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/main"
    tools:context=".Dish.CreateDish"
    android:background="#D5D6D6">

    <ImageButton
        android:layout_width="201dp"
        android:layout_height="182dp"
        android:src="@drawable/image_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtDishName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Dish name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.480">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtDishDesc"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Quite desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.600" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/toggleButtonNut"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@drawable/crustacean_icon"
        android:layout_marginTop="52dp"
        android:textOff="Deseleccionado"
        android:textOn="Seleccionado"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp" />

    <ImageButton
        android:id="@+id/toggleButtonGluten"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@drawable/gluten_icon"
        android:layout_marginTop="52dp"
        android:textOff="Deseleccionado"
        android:textOn="Seleccionado"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc"
        tools:layout_editor_absoluteX="36dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/toggleButtonEgg"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@drawable/egg_icon"
        android:layout_marginTop="52dp"
        android:textOff="Deseleccionado"
        android:textOn="Seleccionado"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="281dp" />

    <ImageButton
        android:id="@+id/toggleButtonSesame"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="sesa"
        android:layout_marginTop="52dp"
        android:textOff="Deseleccionado"
        android:textOn="Seleccionado"
        app:layout_constraintTop_toBottomOf="@+id/txtDishDesc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="183dp" />

</androidx.constraintlayout.widget.ConstraintLayout>