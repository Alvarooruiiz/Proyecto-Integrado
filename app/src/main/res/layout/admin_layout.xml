<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#757575">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCartaDish"
        android:layout_width="360dp"
        android:layout_height="123dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="6dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/ivCartaDish"
            android:layout_width="360dp"
            android:layout_height="123dp"
            android:src="@drawable/card_comida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/cvCartaDrink"
        android:layout_width="360dp"
        android:layout_height="123dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvCartaDish"
        app:cardCornerRadius="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/ivCartaDrink"
            android:layout_width="360dp"
            android:src="@drawable/card_cocteles"
            android:layout_height="123dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCartaDish"/>

    </androidx.cardview.widget.CardView>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvCartaDrink"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:columnCount="2">
        <androidx.cardview.widget.CardView
            android:layout_column="0"
            app:cardCornerRadius="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="6dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                />
        </androidx.cardview.widget.CardView>
    </GridLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvGoogleMaps"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/ivGoogleMaps"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/google_maps2"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>